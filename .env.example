# .env.example - Configuration template for sekha-controller
# 
# Copy this file to `.env` and update values as needed:
# cp .env.example .env
#
# Values in `.env` override config.toml settings

# Server Configuration
# Port for HTTP API (default: 8080)
SEKHA_SERVER_PORT=8080

# MCP API Authentication
# Generate a secure key: openssl rand -hex 32
# Must be minimum 32 characters for security
SEKHA_MCP_API_KEY=test_key_12345678901234567890123456789012

# Database Location
# Default: Creates sekha.db in project directory
# Override with absolute path if needed: sqlite:///path/to/custom/location.db
SEKHA_DATABASE_URL=sqlite://sekha.db

# LLM Integration
# Ollama API endpoint for embeddings (default: http://localhost:11434)
SEKHA_OLLAMA_URL=http://localhost:11434
